\ProvidesPackage{beamerthemeKyoto}[2010/06/19 v0.1 for beamer 3.07]

\mode<presentation>
% include beamer theme
\useinnertheme[shadow=true]{rounded}
\useoutertheme{default}
\usecolortheme{orchid}
\usecolortheme{whale}
% replace whale setting
\setbeamercolor{palette titleslide}{fg=black}
\setbeamercolor{palette nontitleslide}{fg=white}
\usefonttheme{serif}
\mathversion{bold}
%%% [default slide settings] %%%
%% margin settings
\setbeamersize{%
  text margin left=0.05\textwidth,%
  text margin right=0.05\textwidth%
}
%% for change silde settings
\newcommand{\settitleslide}{
  \setbeamercolor{titlelike}{parent=palette titleslide}
  \setbeamertemplate{background}{%
    \includegraphics[bb=0 0 737 562, height=\paperheight,%
    keepaspectratio=false]{openlogo-light.png}%
  }}
\newcommand{\setdefaultslide}{
  \setbeamercolor{titlelike}{parent=palette nontitleslide}
  \setbeamertemplate{background}{%
    \includegraphics[bb=0 0 737 562,width=\paperwidth,%
    keepaspectratio=false]{beamer-bg.png}%
  }}
%% set title slide settings %%

%%% [frame settings] %%%
% frametitlesize: beamer's default frametitle is \Large
\setbeamerfont{frametitle}{size=\large, series=\bf}
\setbeamercolor{frametitle}{fg=white}

%%% [takahashi methods!] %%%
\newcommand{\takahashi}[2][12]{
  \setbeamertemplate{background}{}
  \setbeamercolor{normal text}{fg=black,bg=white}
  \begin{frame} 
      \begin{center} 
          \bf \fontsize{#1pt}{#1pt}\selectfont #2
      \end{center} 
  \end{frame}
  \setdefaultslide
}


\mode
<all>